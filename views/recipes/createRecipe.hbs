<form action="/recipes/create" method="POST">
    <input type="text" name="title" placeholder="Name of recipe"/>
    <input type="text" name="level" placeholder="Easy Peasy, Amateur Chef or UltraPro Chef"/>
    <input type="text" name="ingredients" placeholder="Ingredients"/>
    <input type="text" name="cuisine" placeholder="Cuisine"/>
    <input type="text" name="dishType" placeholder="Dishtype"/>
    <input type="text" name="image" placeholder="Image link"/>
    <input type="text" name="duration" placeholder="Duration in min"/>
    <input type="text" name="creator" placeholder="Creator"/>
    <input type="text" name="created" placeholder="Created YYYY-MM-DD"/>
    <button type="submit" style="border-style: ridge; border-radius: 7px; border-color: grey">Create Recipe</button>
</form>
