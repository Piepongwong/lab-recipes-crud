{{!-- form for POST request and req.body --}}
<h2>Create a new recipe!</h2>
<form action="/create" method="POST">
    <input type="text" placeholder="Title of your recipe" name="title">

    <select type="text" value="{{recipe.level}}" name="level">
            <option value='Easy Peasy' selected>Easy Peasy</option>
            <option value='Amateur Chef'>Amateur Chef</option>
            <option value='UltraPro Chef'>UltraPro Chef</option>
    </select><br><br>

    <input type="text" placeholder="Ingredients of your recipe" name="ingredients">
    <input type="text" placeholder="Cuisine" name="cuisine">

    <select type="text" value="{{recipe.dishType}}" name="dishType">
        <option value='Breakfast'>Breakfast</option>
        <option value='Dish' selected>Dish</option>
        <option value='Snack'>Snack</option>
        <option value='Drink'>Drink</option>
        <option value='Dessert'>Dessert</option>
        <option value='Other'>Other</option>
    </select><br><br>

    <input type="text" placeholder="image url" name="image">
    <input type="number" placeholder="Duration" name="duration">
    <input type="submit">
</form>