<h3>Please, fill in the form what you need to update in the recipe.</h3>

<form action="/recipes/update/{{recipeList._id}}" method="POST">
    <label for="title">Title: </label>
    <input type="text" name="title" value="{{recipeList.title}}">

    <label for="level">Level: </label>
    <input type="text" name="level" value="{{recipeList.level}}">

    <label for="creator">Creator: </label>
    <input type="text" name="creator" value="{{recipeList.creator}}">

    <label for="duration">Duration: </label>
    <input type="text" name="duration" value="{{recipeList.duration}}">
    
    <button type="submit">Update</button>
</form>
